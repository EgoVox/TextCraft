<%= form_with(model: [@story, @chapter], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title, "Titre du Chapitre"%>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :content, "Contenu du Chapitre" %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <%= form.submit "Enregistrer le Chapitre", class: 'btn btn-primary' %>
<% end %>

