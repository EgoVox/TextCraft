<div class="chapter-edit-container">
  <div class="chapter-form card">
    <%= form_with(model: [@story, @chapter], local: true) do |form| %>
      <div class="form-group">
        <%= form.label :title, "Titre du Chapitre", class: 'form-label' %>
        <%= form.text_field :title, class: 'form-control input-field' %>
      </div>

      <div class="form-group">
        <%= form.label :content, "Contenu du Chapitre", class: 'form-label' %>
        <%= form.rich_text_area :content %>
      </div>

      <div class="form-actions">
        <%= form.submit "Enregistrer le Chapitre", class: 'btn btn-primary' %>
        <%= link_to 'Retour Ã  l\'histoire', story_path(@story), class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
