<%= form_with(model: @story, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :category_id, "Choisir une catégorie" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, prompt: "Sélectionnez une catégorie", class: "form-control" %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Retour aux histoire', stories_path, class: 'btn btn-secondary' %>
