<div class="auth-container">
  <div class="auth-header">
    <h2>Inscription sur TextCraft</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'auth-form') do |f| %>
    <div class="form-group">
      <%= f.label :email, "Adresse e-mail", class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-field', placeholder: "Entrez votre e-mail" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Mot de passe", class: 'form-label' %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'input-field', placeholder: "Entrez votre mot de passe" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirmer le mot de passe", class: 'form-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input-field', placeholder: "Confirmez votre mot de passe" %>
    </div>

    <div class="form-group">
      <%= f.submit "S'inscrire", class: 'cta-button' %>
    </div>
  <% end %>

  <div class="auth-links">
    <p>Déjà un compte ? <%= button_to "Connectez-vous", new_user_session_path, method: :get, class: 'cta-button' %></p>
  </div>
</div>
