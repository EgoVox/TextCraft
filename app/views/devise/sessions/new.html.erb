<div class="auth-container">
  <div class="auth-header">
    <h2>Connexion à TextCraft</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'auth-form') do |f| %>
    <div class="form-group">
      <%= f.label :email, "Adresse e-mail", class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-field', placeholder: "Entrez votre e-mail" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "Mot de passe", class: 'form-label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'input-field', placeholder: "Entrez votre mot de passe" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group remember-me">
        <%= f.check_box :remember_me, class: 'checkbox-field' %>
        <%= f.label :remember_me, "Se souvenir de moi", class: 'form-label-checkbox' %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.submit "Se connecter", class: 'cta-button' %>
    </div>
  <% end %>

  <div class="auth-links">
    <p><%= link_to "Mot de passe oublié", new_password_path(resource_name), class: 'forgot-password-link' %></p>
    <p>Pas encore de compte ? <%= button_to "Inscrivez-vous", new_user_registration_path, method: :get, class: 'cta-button' %></p>
  </div>
</div>
